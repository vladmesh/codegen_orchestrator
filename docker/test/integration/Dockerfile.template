FROM python:3.12-slim

WORKDIR /app

# Install git (required by copier) and curl
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install test dependencies
COPY docker/test/integration/requirements.template.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy tests (usually mounted, but good for caching)
COPY tests/integration/template /app/tests/integration/template

ENV PYTHONPATH=/app

CMD ["pytest"]
