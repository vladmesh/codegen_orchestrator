#!/bin/bash
# Pre-push hook: Run linters and tests before pushing
# This hook runs automatically before each push and BLOCKS if checks fail

set -e

echo "ğŸš€ Running pre-push validation..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if Docker is available
if ! command -v docker &> /dev/null; then
    echo -e "${RED}âŒ Docker not found. Please install Docker.${NC}"
    exit 1
fi

# Run linting checks
echo "ğŸ” Running linters..."
if ! make lint; then
    echo -e "${RED}âŒ Linting failed!${NC}"
    echo -e "${YELLOW}ğŸ’¡ Fix linting errors before pushing${NC}"
    exit 1
fi

# Run unit tests (fast, no external dependencies)
echo "ğŸ§ª Running unit tests..."
if ! make test-unit; then
    echo -e "${RED}âŒ Unit tests failed!${NC}"
    echo -e "${YELLOW}ğŸ’¡ Fix failing tests before pushing${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… All pre-push checks passed!${NC}"
exit 0

