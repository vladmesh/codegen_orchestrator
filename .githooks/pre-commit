#!/bin/bash
# Pre-commit hook: Auto-format code using Docker
# This hook runs automatically before each commit and FIXES formatting issues

set -e

echo "üé® Auto-formatting code before commit..."

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if Docker is available
if ! command -v docker &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  Docker not found. Skipping formatting.${NC}"
    exit 0
fi

# Get list of staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}‚úÖ No Python files to format${NC}"
    exit 0
fi

echo -e "${YELLOW}üìù Formatting ${STAGED_FILES}...${NC}"

# Run make format (ruff format + ruff check --fix)
docker compose run --rm tooling sh -c "ruff format ${STAGED_FILES} && ruff check --fix ${STAGED_FILES}" || true

# Add the formatted files back to the commit
for file in $STAGED_FILES; do
    git add "$file"
done

echo -e "${GREEN}‚úÖ Code formatted and added to commit${NC}"
exit 0


