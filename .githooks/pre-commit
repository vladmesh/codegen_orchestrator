#!/bin/bash
# Pre-commit hook: Format and lint code using Docker
# This hook runs automatically before each commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if Docker is available
if ! command -v docker &> /dev/null; then
    echo -e "${RED}âŒ Docker not found. Please install Docker.${NC}"
    exit 1
fi

# Get list of staged Python files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}âœ… No Python files to check${NC}"
    exit 0
fi

echo -e "${YELLOW}ğŸ“ Checking ${#STAGED_FILES[@]} Python files...${NC}"

# Run ruff format check
echo "ğŸ¨ Checking formatting with ruff..."
if ! docker compose run --rm tooling ruff format --check $STAGED_FILES; then
    echo -e "${RED}âŒ Formatting check failed!${NC}"
    echo -e "${YELLOW}ğŸ’¡ Run 'make format' to fix formatting issues${NC}"
    exit 1
fi

# Run ruff linting
echo "ğŸ” Running linter..."
if ! docker compose run --rm tooling ruff check $STAGED_FILES; then
    echo -e "${RED}âŒ Linting failed!${NC}"
    echo -e "${YELLOW}ğŸ’¡ Run 'make format' to auto-fix some issues${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"
exit 0
