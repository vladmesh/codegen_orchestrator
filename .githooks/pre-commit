#!/bin/bash
# Pre-commit hook: Auto-format code using Docker
# This hook runs automatically before each commit and FIXES formatting issues

set -euo pipefail

echo "üé® Auto-formatting code before commit..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root of the git repository
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "$REPO_ROOT"

# Check if Docker is available
if ! command -v docker &> /dev/null; then
    echo -e "${RED}‚ùå Docker not found. Aborting commit.${NC}"
    exit 1
fi

# Check if Docker daemon is running
if ! docker info >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Docker daemon is not running. Aborting commit.${NC}"
    exit 1
fi

# Get list of staged Python files (NUL-delimited to preserve spaces)
mapfile -d '' -t STAGED_FILES < <(git diff --cached --name-only --diff-filter=ACM -z -- '*.py')

if [ "${#STAGED_FILES[@]}" -eq 0 ]; then
    echo -e "${GREEN}‚úÖ No Python files to format${NC}"
    exit 0
fi

FILES_ESCAPED=$(printf '%q ' "${STAGED_FILES[@]}")
echo -e "${YELLOW}üìù Formatting staged Python files...${NC}"

# Run make format (ruff format + ruff check --fix)
if ! make format FILES="$FILES_ESCAPED"; then
    echo -e "${RED}‚ùå Formatting failed. Aborting commit.${NC}"
    exit 1
fi

# Add the formatted files back to the commit
for file in "${STAGED_FILES[@]}"; do
    git add "$file"
done

echo -e "${GREEN}‚úÖ Code formatted and added to commit${NC}"
exit 0
