# Multi-stage Dockerfile optimized for testing with caching

FROM python:3.12-slim AS base

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# === Test Dependencies Stage ===
FROM base AS test-deps

# Copy only dependency files first (for caching)
COPY services/scheduler/pyproject.toml ./

# Install runtime + test dependencies
RUN pip install --no-cache-dir . && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-cov

# === Test Stage ===
FROM test-deps AS test

# Copy shared module
COPY shared /app/shared

# Copy source code
COPY services/scheduler/src ./src
COPY services/scheduler/tests ./tests
COPY services/scheduler/pytest.ini ./

# Run tests
CMD ["pytest", "-v"]
