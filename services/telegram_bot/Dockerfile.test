# Multi-stage Dockerfile optimized for testing with caching

FROM python:3.12-slim AS base

WORKDIR /app

# === Test Dependencies Stage ===
FROM base AS test-deps

# Copy only dependency files first (for caching)
COPY services/telegram_bot/pyproject.toml ./

# Install runtime + test dependencies
RUN pip install --no-cache-dir . && \
    pip install --no-cache-dir pytest pytest-asyncio pytest-cov

# === Test Stage ===
FROM test-deps AS test

# Copy shared module
COPY shared /app/shared

# Copy source code
COPY services/telegram_bot/src ./src
COPY services/telegram_bot/tests ./tests
COPY services/telegram_bot/pytest.ini ./

# Run tests
CMD ["pytest", "-v"]
